#!/bin/sh
#
# PURPOSE: Executable shell script that runs SPIDER's Spire and
#          python tools using its own installed version of python 2.5

SPIRE_EXE=`which spire`
SPIRE_BIN_DIR=`dirname $SPIRE_EXE`
SPIRE_DIR=`dirname $SPIRE_BIN_DIR`

LD_LIBRARY_PATH=$SPIRE_DIR/lib:$LD_LIBRARY_PATH
export LD_LIBRARY_PATH

PYTHON_VERSION=2.5
PYTHON="$SPIRE_BIN_DIR/python$PYTHON_VERSION"
unset PYTHONHOME
unset PYTHONPATH

exec "$PYTHON" "$@"

